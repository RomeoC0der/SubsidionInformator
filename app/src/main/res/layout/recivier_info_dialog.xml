<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dialog_data_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/default_man_icon_foreground" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_data_pib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="LOREM IPSUM"
                android:textFontWeight="800"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/dialog_data_TIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="left"
                android:text="lorem ipsum"
                style="@style/default_paragraph"/>/>

            <TextView
                android:id="@+id/dialog_data_pass_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="left"
                android:text="lorem ipsum"
                style="@style/default_paragraph"/>/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_data_position"
        style="@style/default_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="lorem ipsum" />
    <TextView
        android:id="@+id/dialog_data_subsidion_statement"
        style="@style/default_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="lorem ipsum" />

    <TextView
        android:id="@+id/dialog_data_subsidion_id"
        style="@style/default_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="lorem ipsum" />

    <TextView
        android:id="@+id/dialog_data_month_subs_size"
        style="@style/default_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="lorem ipsum"/>
    <TextView
        android:id="@+id/dialog_data_year_subs_size"
        style="@style/default_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="lorem ipsum"/>

    <TextView
        android:id="@+id/dialog_data_arrived_diaposon"
        style="@style/default_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="lorem ipsum" />

    <TextView
        android:id="@+id/dialog_data_get_diaposon"
        style="@style/default_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="lorem ipsum" />
</LinearLayout>