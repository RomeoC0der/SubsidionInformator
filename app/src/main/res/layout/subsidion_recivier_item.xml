<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_margin="5dp"
        android:background="@drawable/black_outline_background"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/recivier_logotype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:srcCompat="@drawable/gerb_foreground" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/receiving_pib"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:text="template_name"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/receiving_region"
                style="@style/default_paragraph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/paragraph_color"/>
            <TextView
                android:id="@+id/recivier_position"
                style="@style/default_paragraph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/recivier_birthdate"
                style="@style/default_paragraph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recivier_more_button"
            style="@style/material_filled_button"
            android:layout_weight="1"
            android:text="@string/recivier_button_more" />

        <Button
            android:id="@+id/recivier_edit_button"
            style="@style/material_filled_button"
            android:layout_weight="1"
            android:text="@string/recivier_button_edit" />
    </LinearLayout>
</LinearLayout>
